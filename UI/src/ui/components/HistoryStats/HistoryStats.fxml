<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.components.HistoryStats.HistoryStats">
   <children>
      <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 2px;" text="Program Run History" />
      
      <!-- Main content area with table on left and theme controls on right -->
      <HBox alignment="TOP_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Left side: History Table and Action Buttons -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <!-- History Table -->
                  <TableView fx:id="historyTableView" maxHeight="120.0" maxWidth="Infinity" minHeight="30.0" minWidth="200.0" prefHeight="80.0" VBox.vgrow="NEVER">
                     <columns>
                        <TableColumn fx:id="runNumberColumn" minWidth="60.0" prefWidth="80.0" text="Run #" />
                        <TableColumn fx:id="runLevelColumn" minWidth="60.0" prefWidth="80.0" text="Level" />
                        <TableColumn fx:id="inputsColumn" minWidth="120.0" prefWidth="150.0" text="Inputs" />
                        <TableColumn fx:id="yValueColumn" minWidth="80.0" prefWidth="100.0" text="Y Value" />
                        <TableColumn fx:id="cyclesColumn" minWidth="60.0" prefWidth="80.0" text="Cycles" />
                     </columns>
                  </TableView>
                  
                  <!-- Action Buttons -->
                  <HBox spacing="5.0" style="-fx-padding: 5px;">
                     <children>
                        <Button fx:id="rerunButton" disable="true" onAction="#rerunSelectedRun" prefHeight="25.0" prefWidth="100.0" text="Rerun Selected" />
                        <Button fx:id="clearHistoryButton" onAction="#clearHistory" prefHeight="25.0" prefWidth="100.0" text="Clear History" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
                  <!-- Right side: Theme Controls -->
            <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-padding: 10px;">
               <children>
                  <Label prefHeight="1.0" prefWidth="83.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Appearance" />
                  
                        <!-- Theme Controls -->
                  <VBox alignment="CENTER" spacing="8.0">
                     <children>
                        <Label text="Theme:" />
                        <ComboBox fx:id="themeSelector" maxWidth="150.0" minWidth="120.0" onAction="#onThemeSelected" prefHeight="35.0" prefWidth="150.0" promptText="Select Theme">
                           <tooltip>
                              <Tooltip text="Select a color scheme for the application" />
                           </tooltip>
                        </ComboBox>
                        
                              <Label text="Font Size:" />
                        <ComboBox fx:id="fontSizeSelector" maxWidth="150.0" minWidth="80.0" onAction="#onFontSizeSelected" prefHeight="35.0" prefWidth="150.0" promptText="Size">
                           <tooltip>
                              <Tooltip text="Select the font size for the application" />
                           </tooltip>
                        </ComboBox>
                        
                        <CheckBox fx:id="animationsCheckBox" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" selected="true" text="Animations" onAction="#onAnimationsToggled">
                           <tooltip>
                              <Tooltip text="Enable or disable visual animations during program execution" />
                           </tooltip>
                        </CheckBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
      
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="600.0" prefHeight="120.0" prefWidth="664.0" spacing="5.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.components.Header.Header">
   <children>
      <!-- Load File Row with Progress Bar -->
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#loadFileButtonPressed" prefHeight="35.0" prefWidth="150.0" styleClass="load-button" text="Load File">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <TextField fx:id="filePathField" maxWidth="Infinity" minWidth="300.0" prefHeight="35.0" prefWidth="400.0" promptText="Currently Loaded File path" />
            <Label fx:id="progressLabel" alignment="CENTER" prefHeight="35.0" prefWidth="100.0" style="-fx-font-size: 12px; -fx-text-fill: #4169E1;" text="Loading..." visible="false">
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
            </Label>
            <ProgressBar fx:id="progressBar" prefHeight="25.0" prefWidth="150.0" progress="0.0" visible="false" />
         </children>
      </HBox>
      
      <!-- Controls Row -->
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <ComboBox fx:id="programFunctionSelector" maxWidth="250.0" minWidth="200.0" prefHeight="35.0" prefWidth="250.0" promptText="Select Program" onAction="#onProgramFunctionSelected">
               <tooltip>
                  <Tooltip text="Select the main program or any subfunction to view its instructions in the table below" />
               </tooltip>
            </ComboBox>
            <ComboBox fx:id="levelSelector" maxWidth="200.0" minWidth="150.0" prefHeight="35.0" prefWidth="200.0" promptText="Select Level" onAction="#onLevelSelected">
               <tooltip>
                  <Tooltip text="Select the expansion level to jump directly to that degree" />
               </tooltip>
            </ComboBox>
            <Label fx:id="lblDegreeStatus" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" styleClass="status-label" text="— / —">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ComboBox fx:id="labelVariableComboBox" maxWidth="200.0" minWidth="150.0" prefHeight="35.0" prefWidth="200.0" promptText="Select Label/Variable" onAction="#onLabelVariableSelected">
               <tooltip>
                  <Tooltip text="Select a label or variable to highlight its usage in the instruction table" />
               </tooltip>
            </ComboBox>
         </children>
      </HBox>
   </children>
</VBox>

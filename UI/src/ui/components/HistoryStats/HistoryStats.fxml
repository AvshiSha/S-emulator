<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.components.HistoryStats.HistoryStats">
   <children>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Program Run History" />
      
      <!-- History Table -->
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" maxWidth="Infinity" minWidth="400.0" prefHeight="200.0" prefWidth="500.0" vbarPolicy="AS_NEEDED">
         <content>
            <TableView fx:id="historyTableView" maxWidth="Infinity" minWidth="400.0" prefHeight="200.0" prefWidth="500.0">
               <columns>
                  <TableColumn fx:id="runNumberColumn" minWidth="60.0" prefWidth="80.0" text="Run #" />
                  <TableColumn fx:id="runLevelColumn" minWidth="60.0" prefWidth="80.0" text="Level" />
                  <TableColumn fx:id="inputsColumn" minWidth="120.0" prefWidth="150.0" text="Inputs" />
                  <TableColumn fx:id="yValueColumn" minWidth="80.0" prefWidth="100.0" text="Y Value" />
                  <TableColumn fx:id="cyclesColumn" minWidth="60.0" prefWidth="80.0" text="Cycles" />
               </columns>
            </TableView>
         </content>
      </ScrollPane>
      
      <!-- Action Buttons -->
      <HBox spacing="10.0" style="-fx-padding: 10px;">
         <children>
            <Button fx:id="rerunButton" disable="true" onAction="#rerunSelectedRun" prefWidth="120.0" text="Rerun Selected" />
            <Button fx:id="clearHistoryButton" onAction="#clearHistory" prefWidth="120.0" text="Clear History" />
         </children>
      </HBox>
      
      <!-- Variable State Display -->
      <VBox spacing="5.0" style="-fx-padding: 10px;">
         <children>
            <Label fx:id="variableStateLabel" style="-fx-font-weight: bold;" text="Variable State (End of Selected Run):" />
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" maxWidth="Infinity" minWidth="400.0" prefHeight="100.0" prefWidth="500.0" vbarPolicy="AS_NEEDED">
               <content>
                  <TableView fx:id="variableStateTableView" maxWidth="Infinity" minWidth="400.0" prefHeight="100.0" prefWidth="500.0">
                     <columns>
                        <TableColumn fx:id="variableNameColumn" minWidth="100.0" prefWidth="150.0" text="Variable" />
                        <TableColumn fx:id="variableValueColumn" minWidth="80.0" prefWidth="120.0" text="Value" />
                     </columns>
                  </TableView>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</VBox>

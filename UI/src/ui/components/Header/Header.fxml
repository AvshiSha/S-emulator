<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="600.0" prefHeight="120.0" prefWidth="664.0" spacing="5.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.components.Header.Header">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#loadFileButtonPressed" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Load File Button">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <TextField fx:id="filePathField" maxWidth="Infinity" minWidth="300.0" prefHeight="35.0" prefWidth="500.0" promptText="Currently Loaded File path" style="-fx-background-color: #FFF8DC; -fx-border-color: #4169E1; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;" />
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label fx:id="progressLabel" alignment="CENTER" prefHeight="31.0" prefWidth="656.0" style="-fx-font-size: 12px; -fx-text-fill: #4169E1;" text="Loading file..." visible="false">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
            </Label>
            <ProgressBar fx:id="progressBar" prefHeight="58.0" prefWidth="664.0" progress="0.0" style="-fx-accent: #4CAF50;" visible="false" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="btnDecreaseDegree" mnemonicParsing="false" onAction="#decreaseDegreePressed" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="[-]">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Decrease expansion degree" />
               </tooltip>
            </Button>
            <Label fx:id="lblDegreeStatus" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #F0F0F0; -fx-border-color: #4169E1; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8px;" text="— / —">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="btnIncreaseDegree" mnemonicParsing="false" onAction="#increaseDegreePressed" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="[+]">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Increase expansion degree" />
               </tooltip>
            </Button>
            <ComboBox fx:id="labelVariableComboBox" maxWidth="200.0" minWidth="150.0" prefHeight="35.0" prefWidth="200.0" promptText="Select Label/Variable" style="-fx-background-color: #FFF8DC; -fx-border-color: #4169E1; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;" onAction="#onLabelVariableSelected">
               <tooltip>
                  <Tooltip text="Select a label or variable to highlight its usage in the instruction table" />
               </tooltip>
            </ComboBox>
         </children>
      </HBox>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.semulator.client.ui.ProgramRunController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
   
   <children>
      <!-- Header Bar -->
      <HBox fx:id="headerBar" 
            style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-spacing: 15;"
            alignment="CENTER_LEFT">
         <children>
            <!-- User Name -->
            <Label text="User Name:" style="-fx-font-weight: bold;"/>
            <Label fx:id="currentUserName" text="[Current User]" style="-fx-text-fill: #0066cc;"/>
            
            <!-- Screen Title -->
            <Label fx:id="screenTitle" text="S-Emulator - Execution" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <!-- Available Credits -->
            <Label text="Available Credits:" style="-fx-font-weight: bold;"/>
            <Label fx:id="availableCredits" text="0" style="-fx-text-fill: #ff6600; -fx-font-weight: bold;"/>
         </children>
         <VBox.margin><Insets bottom="20.0"/></VBox.margin>
      </HBox>
      
      <!-- Main Content Area -->
      <HBox spacing="10" VBox.vgrow="ALWAYS">
         <children>
            <!-- Left Panel - Instructions and History -->
            <VBox fx:id="leftPanel" HBox.hgrow="ALWAYS" minWidth="400"
                  style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-width: 1; -fx-padding: 15;">
               <children>
                  <!-- Execution Header Component (Degree and Highlight Controls) -->
                  <fx:include fx:id="executionHeader" source="../fxml/components/ExecutionHeader.fxml">
                     <VBox.margin><Insets bottom="15.0"/></VBox.margin>
                  </fx:include>
                  
                  <!-- Instructions Table Component -->
                  <fx:include fx:id="instructionTableComponent" source="../fxml/components/InstructionTable.fxml" VBox.vgrow="ALWAYS" />
                  
                  <!-- Selected Instruction History Chain Component -->
                  <fx:include fx:id="historyChainComponent" source="../fxml/components/HistoryChain.fxml" />
               </children>
            </VBox>
            
            <!-- Right Panel - Debugger/Execution Component -->
            <VBox fx:id="rightPanel" minWidth="500" prefWidth="800" HBox.hgrow="NEVER"
                  style="-fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-width: 1; -fx-padding: 15;">
               <children>
                  <!-- DebuggerExecution Component -->
                  <fx:include fx:id="debuggerExecutionComponent" source="../fxml/components/DebuggerExecution.fxml" VBox.vgrow="ALWAYS" />
                  
                  <!-- Back to Dashboard Button -->
                  <Button fx:id="backToDashboardButton" text="Back to Dashboard" 
                          style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8;">
                     <VBox.margin><Insets top="20.0"/></VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
      
   </children>
</VBox>

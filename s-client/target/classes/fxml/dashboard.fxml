<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.semulator.client.ui.DashboardController">
   <children>
      <!-- Header at the top -->
      <VBox fx:id="headerComponent" VBox.vgrow="NEVER" />
      
      <!-- Main content area with side-by-side layout -->
      <HBox spacing="10.0" alignment="TOP_LEFT" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
         <children>
            <!-- Left side: Instruction Table and History Chain -->
            <VBox spacing="5.0" minWidth="300.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Instruction Table with scrollbars -->
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="instructionTableComponent" />
                     </content>
                  </ScrollPane>
                  
                  <!-- History Chain with scrollbars -->
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="historyChainComponent" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Right side: Debugger/Execution and Program Run History -->
            <VBox spacing="5.0" minWidth="300.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="debuggerExecutionComponent" VBox.vgrow="NEVER" maxHeight="400.0" />
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="historyStatsComponent" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
